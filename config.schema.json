{
  "pluginAlias": "Landroid",
  "pluginType": "platform",
  "footerDisplay": "For documentation please see the https://github.com/normen/homebridge-landroid",
  "schema": {
    "email":{
      "title": "eMail",
      "description": "the email address of your worx account",
      "type": "string",
      "required": true
    },
    "pwd":{
      "title": "Password",
      "description": "the password of your worx account",
      "type": "string",
      "required": true
    },
    "landroids":{
      "title": "Configured Mowers",
      "type": "array",
      "items":{
        "title": "Mower",
        "type": "object",
        "properties":{
          "name":{
            "title": "Name",
            "type": "string",
            "required": true
          },
          "email":{
            "title": "eMail",
            "description": "the email address of your worx account",
            "type": "string",
            "required": false
          },
          "pwd":{
            "title": "Password",
            "description": "the password of your worx account",
            "type": "string",
            "required": false
          },
          "dev_sel":{
            "title": "Selected Mower",
            "description": "the mower number, default 0 (first mower)",
            "type": "number",
            "required": false
          }
        }
      }
    }
  },
  "form": [
    "email",
    "pwd",
    {
      "key":"landroids",
      "items":[
        "landroids[].name",
        "landroids[].dev_sel"
      ]
    }
  ]
}
